<div class="account-header">
    <div class="container">
        <div class="account-logout">
            <div class="logout-img">
                <img src="~/Content/images/users/header_user_2_32x32.jpg" alt="@User.Identity.Name" title="@User.Identity.Name">
            </div>
            @Html.ActionLink("Выход", "Logout", "Login", null, new
            {
                @class = "logout-btn",
                @role = "button",
                @title = "Выход: " + @User.Identity.Name
            })
            @*<a class="logout-btn" role="button" title="Выход: Наталья Константинова">Выход</a>*@
        </div>
        <ul class="account-menu">
            <li @Html.Raw(Request.Url.AbsolutePath.Contains("Cabinet") 
                    && !Request.Url.AbsolutePath.Contains("MyPage") ? @"class=""active""" : @"")><a href="@Url.Action("Index", "Cabinet")"><i class="ico-user"></i>Профиль</a></li>
            <li><a><i class="ico-mail"></i><span class="count">3</span>Cообщения</a></li>
            <li><a><i class="ico-order"></i>Заявки</a></li>
            <li><a><i class="ico-money"></i>Баланс</a></li>
            <li @Html.Raw(Request.Url.AbsolutePath.Contains("MyPage") ? @"class=""active""" : @"")><a href="@Url.Action("MyPage", "Cabinet")"><i class="ico-page"></i>Моя страница</a></li>
            <li><a><i class="ico-cart"></i>Магазин</a></li>
        </ul>
    </div>
</div>
