@model IEnumerable<Cure.WebSite.Models.ChildVisual>

<div class="all-pages-head">
    <div class="row">
        <div class="col-lg-3">
            <h1 class="all-pages-H1">Наши дети</h1>
        </div>
        <div class="col-lg-9">
            <div class="children-page-filter">
                @Html.Partial("_ChildFilter")
            </div>
        </div>
    </div>
</div>

<div class="children-page-list">
    <div class="row" id="js-for-load-children">
        @foreach (var item in Model)
              {
                  <div class="col-lg-3 col-sm-4 col-ss-6 children-page-item js-ajax-for-count">
                      <a class="children-page-child" href="#">
                          <img class="child-img" src="@item.PhotoUrl" alt="@item.Name">
                          <div class="child-txt">
                              <div class="child-name">@item.Name, <span class="child-age">@item.Age лет</span></div>
                              <div class="child-city">@item.CountryName, @item.Region</div>
                          </div>
                      </a>
                  </div>
              }
    </div>

    <div class="row">
        <div class="col-ss-12">
            <div class="all-pages-more">
                <div class="more-title">
                    Позаканы <span id="more-count">16</span> из <span id="more-all">134</span>
                </div>
                <div class="more-btn">
                    <a class="btn btn-light has-loading js-load-more-children">Показать еще</a>
                </div>
            </div>
        </div>
    </div>
</div>

