@using System.Configuration
@using Cure.Utils

<div class="comments-title">Новые впечатления:</div>
<div class="comments-addform">
    <!-- Запостить новое впечатление -->
    <form>
        <div class="comments-addform-head">
            <div class="head-imgs">
                <img class="head-img" src="@Html.Raw(SiteUtils.GetMyUserpic(Server,
                                                           Session,
                                                           User.Identity.Name,
                                                           ConfigurationManager.AppSettings["PhotoLocation"],
                                                           ConfigurationManager.AppSettings["PhotoUrl"]))" alt="@Model.ContactName" title="@Model.ContactName">
            </div>
            <div class="head-txt">
                <div class="head-name">@Model.ContactName</div>
            </div>
        </div>
        <div class="comments-addform-body">
            <textarea class="forms-text" placeholder="Ваше сообщение"></textarea>
            <input class="btn btn-orang" type="submit" value="ДОБАВИТЬ">
            <div class="forms-file">
                <div class="forms-file-msg">Добавить фото</div>
                <input type="file">
            </div>
        </div>
    </form>
</div>
