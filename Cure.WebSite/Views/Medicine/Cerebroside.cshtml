    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main has-gray-bg is-full-screen">
    <div class="container">
        <div class="slimpage medicine-page">
            <a href="@Url.Action("Index", "Medicine")" class="page-close"></a>
            <div class="slimpage-nav medicine-page-nav">
                <a class="slimpage-prev" href="@Url.Action("Ganoderma", "Medicine")" title="Предыдущая статья"></a>
                <a class="slimpage-next" href="@Url.Action("Musk", "Medicine")" title="Следующая статья"></a>
            </div>
            <div class="slimpage-head">
                <div class="slimpage-head-img">
                    <img src="~/Content/images/medicine/medicament_descr.jpg" alt="Цереброзид-Карнозин">
                </div>
                <div class="slimpage-head-txt">
                    <h1 class="slimpage-head-title">Цереброзид-Карнозин, раствор для инъекций (Cerebroside-Carnosine Injection)</h1>
                    <div class="slimpage-head-china">复方脑肽节苷脂注射液</div>
