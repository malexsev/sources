    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main has-gray-bg is-full-screen">
    <div class="container">
        <div class="slimpage medicine-page">
            <a href="@Url.Action("Index", "Medicine")" class="page-close"></a>
            <div class="slimpage-nav medicine-page-nav">
                <a class="slimpage-prev" href="@Url.Action("Ocular", "Medicine")" title="Предыдущая статья"></a>
                <a class="slimpage-next" href="@Url.Action("Cerebroside", "Medicine")" title="Следующая статья"></a>
            </div>
            <div class="slimpage-head">
                <div class="slimpage-head-img">
                    <img src="~/Content/images/medicine/m3.png" alt="Гликопептид ганодермы (Бочжи)">
                </div>
                <div class="slimpage-head-txt">
                    <h1 class="slimpage-head-title">Гликопептид ганодермы (Бочжи), раствор для инъекций (Ganoderma capense Glycopeptide Injection)</h1>
                    <div class="slimpage-head-china">薄芝糖肽注射液</div>
                    <div class="slimpage-head-note">
                        Мощный иммуностимулятор, регулятор сердечно - сосудистой системы,
                        стимулятор процессов заживления.
                    </div>
                </div>
            </div>
            <div class="slimpage-body">
                <div class="user-content">
                    <p>
                        Применяется при прогрессирующей мышечной дистрофии, миотонической дистрофии, дисфункциях вестибулярного аппарата, эпилепсии, бессонице.
                    </p>
