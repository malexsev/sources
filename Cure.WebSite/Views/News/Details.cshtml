@model Cure.WebSite.Models.NewsPageModel
@{
    ViewBag.Title = Model.Subject;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main has-custom-bg" role="main">
    <section class="news-inner-wrapper">
