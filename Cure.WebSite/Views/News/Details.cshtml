                                    <div class="news-inner-header-image" style="background-image: url('@Html.Raw(Model.MainPictureSrc(Server))')"></div>
                                    <div class="news-inner-date">@Html.Raw(Model.Date.HasValue ? Model.Date.Value.ToString("dd.MM.yyyy") : "") </div>
                                    <h2>@Html.Raw(Model.Subject)</h2>
                                </div>
                                @Html.Raw(Model.Text)
                            </div>
