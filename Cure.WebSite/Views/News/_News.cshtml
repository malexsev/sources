@using System.Configuration
@using Cure.DataAccess
@using Cure.Utils
@using Cure.WebSite.Models
@model IEnumerable<NewsPageModel>
@if (Model.Any())
{
    <li class="news-item">
        <div class="col-lg-6 col-md-6">
            <a class="news-item-link" href="@Url.Action(Model.ToList()[0].Alias, "News")" target="_blank">
                <img class="news-item-image" src="@Html.Raw(Model.ToList()[0].MainPictureSrc)" alt="" />
                <span class="news-item-date">@Html.Raw(Model.ToList()[0].Date.HasValue ? Model.ToList()[0].Date.Value.ToString("dd.MM.yyyy") : "<Дата не указана>")</span>
                <span class="news-item-name">"@Model.ToList()[0].Subject"</span>
            </a>
        </div>
        @if (Model.Any() && Model.Count() > 1)
        {
            <div class="col-lg-6 col-md-6">
                <ul class="news-aside">
                    @if (Model.Any() && Model.Count() > 1)
                    {
                        int cnt = 1;
                        foreach (NewsPageModel news in Model.ToList().Skip(1).Take(3))
                        {
                            <li class="news-aside-item">
                                <a class="news-aside-item-link" href="@Url.Action(Model.ToList()[cnt].Alias, "News")" target="_blank">
                                    <img class="news-aside-item-image" src="@Html.Raw(Model.ToList()[cnt].MainPictureSrc)" alt="" />
                                    <span class="news-aside-item-name">@Model.ToList()[cnt].Subject</span>
                                    <span class="news-aside-item-date">@Html.Raw(Model.ToList()[cnt].Date.HasValue ? Model.ToList()[cnt].Date.Value.ToString("dd.MM.yyyy") : "<Дата не указана>")</span>
                                </a>
                            </li>
                            cnt++;
                        }
                    }
                </ul>
            </div>
        }
    </li>
}

