                        <div class="footer-note">и будьте в курсе новостей и акций</div>
                        @using (Html.BeginForm("AddNew", "Newsletter", FormMethod.Post, new
                        {
                            @class = "footer-form js-newsletter-validate",
                            @id = "formNewsletter"
                        }))
                        {
                            <div class="forms-line">
                                @Html.TextBox("email", "", new
                                {
                                    @id = "email",
                                    @maxlength = "250",
                                    @class = "forms-input"
                                })
