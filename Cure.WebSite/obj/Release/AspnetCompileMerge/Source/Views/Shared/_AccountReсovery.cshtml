@using (Html.BeginForm("Recovery", "Login", FormMethod.Post, new
{
    @id = "formRecovery",
    @class = "registr-form js-remind-validate"
}))
{
@*<form class="registr-form js-remind-validate">*@
    <div class="registr-subtitle">Введите имя пользователя или адрес электронной почты,<br> указанный при регистрации</div>
    <div class="forms-line">
        <div class="forms-label"></div>
        @Html.TextBox("remindinp", "", new
        {
            @id = "remindinp",
            @placeholder = "Имя пользователя",
            @maxlength = "50",
            @class = "forms-input"
        })
        @*<input class="forms-input" type="text" name="remindinp">*@
        <div class="note-label"></div>
    </div>
    <div class="forms-line txt-center">
        <input class="btn btn-orang registr-submit" type="submit" value="ОТПРАВИТЬ ПАРОЛЬ">
    </div>
    <div id="error-recovery" class="login-errors"></div>
    <div class="forms-line txt-center">
        <a class="btn btn-small js-show-popup" data-pop="pop-registr" role="button">Вернуться назад</a>
    </div>
}
<div class="forms-on-submit js-submit-ok">
    <div class="registr-subtitle">Пароль изменён и отправлен Вам на почту,<br> указанную при регистрации.</div>
    <div class="registr-text">
        Если  вы не пулучите письмо в течение 10 минут,<br> проверьте папку “Спам”,
        и не переполнен ли почтовый ящик.<br> Если письма нет, свяжитесь с администратором.
    </div>
    <div class="forms-line txt-center">
        <a class="btn btn-small js-close-popup" role="button">Закрыть</a>
    </div>
</div>
