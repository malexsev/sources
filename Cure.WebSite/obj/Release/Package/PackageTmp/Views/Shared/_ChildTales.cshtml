@model IEnumerable<Cure.WebSite.Models.ChildVisual>
@using (Ajax.BeginForm("Index", "Children", null, null, new { id = "childrenform" }))
{
    <div class="all-pages-head">
        <div class="row">
            <div class="col-lg-3">
                <h1 class="all-pages-H1">Наши дети</h1>
            </div>
            <div class="col-lg-9">
                <div class="children-page-filter">
                    @Html.Partial("_ChildFilter")
                </div>
            </div>
        </div>
    </div>

    <div class="children-page-list">
        <div class="row" id="js-for-load-children">
            @Html.Partial("_Children", Model)
        </div>

        <div class="row">
            <div class="col-ss-12">
                <div class="all-pages-more">
                @Html.Hidden("skiprecords", 0, new { id = "skiprecords" })
                    <div class="more-title">
                        Позаканы <span id="more-count">@Html.Raw((ViewBag.TotalCount <= 12 ? ViewBag.TotalCount : 12))</span> из <span id="more-all">@ViewBag.TotalCount</span>
                    </div>
                    <div class="more-btn">
                        <a class="btn btn-light has-loading js-load-more-children">Показать еще</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


