@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { 
                                                                @id = "formLogin", 
                                                                @class = "registr-form js-login-validate" 
                                                                }))
{
    @Html.Hidden("RedirectTo", Url.Action("MyPage", "Cabinet"));
    <div class="forms-line">
        <div class="forms-label">Имя пользователя</div>
        @Html.TextBox("loginname", "", new
        {
            @id = "loginname",
            @placeholder = "Имя пользователя",
            @maxlength = "50",
            @class = "forms-input"
        })
        <div class="note-label"></div>
    </div>
    <div class="forms-line">
        <div class="forms-label">Пароль</div>
        @Html.TextBox("loginpass", "", new
        {
            @id = "password",
            @placeholder = "Пароль",
            @maxlength = "50",
            @class = "forms-input",
            @type = "password"
        })
        <div class="note-label"></div>
    </div>
    <div class="forms-line txt-center">
        <input id="submit-login" class="btn btn-orang registr-submit" type="submit" value="ВОЙТИ">
    </div>
    <div id="error-login" class="form-errors"></div>
    <div class="forms-line txt-center">
        <a class="btn btn-small js-show-popup" data-pop="pop-remind" role="button">Напомнить пароль</a>
    </div>
}